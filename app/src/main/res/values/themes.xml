<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MirrorDoor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.MirrorDoor.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorAccent</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>



    <style name="Theme.MirrorDoor.NoActionBar" parent="Theme.MirrorDoor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="fontTitilliumSemiBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/titillium_web_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="fontTitilliumSemiBold.TextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/titillium_web_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="fontTitilliumBold.TextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/titillium_web</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewStyle" parent="android:TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="EditTextStyle" parent="android:TextAppearance.Widget.EditText">
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorBlack</item>
    </style>

    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="Theme.MirrorDoor.EditText">

        <item name="android:background">@color/colorEditTextBackgound</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/text_color_black</item>
        <item name="android:fontFamily">@font/titillium_web</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="Theme.MirrorDoor.Button">
        <item name="android:background">@drawable/bg_button_yellow_normal</item>
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">@font/titillium_web_semibold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="Theme.MirrorDoor.TextInputLayout">
        <item name="android:background">@drawable/bg_button_yellow_normal</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/text_color_black</item>
        <item name="android:fontFamily">@font/titillium_web_semibold</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.Light.SearchView">

        <item name="android:background">#F5F5F5</item>
        <item name="android:textColorHint">@color/colorEditText</item>
        <item name="android:fontFamily">@font/titillium_web</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:textSize">20sp</item>
    </style>

   <!-- <style name="DatePicker" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/darkblue</item>
        <item name="android:yearListSelectorColor">@color/darkgray</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:minDate">01/01/2000</item>
    </style>-->



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MirrorDoor.textinputlayout">
        <item name="android:textColorHint">#99000000</item>
        <item name="strokeWidth">312dp</item>
        <item name="boxStrokeColor">#61000000</item>
    </style>

    <style name="Theme.MirrorDoor.Button_2">
    <item name="android:background">@drawable/bg_button_yellow_normal</item>
    <item name="android:fontFamily">@font/titillium_web_semibold</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.MirrorDoor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>
</resources>