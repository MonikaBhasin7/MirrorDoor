<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <data>

   </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/fragment_background"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_add_company"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            app:layout_constraintEnd_toStartOf="@id/cv_show_company"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:text="@string/add_company"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/titillium_web_semibold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_show_company"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            app:layout_constraintStart_toEndOf="@id/cv_add_company"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_height="100dp">

            <TextView
                android:text="@string/list_companies"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/titillium_web_semibold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" /></androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>
